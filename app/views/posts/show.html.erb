<div id="notice" class="notice"><%= notice %></div>

<h4>Title:</h4>
  <%= @post.title %><br>
<h4>Description:</h4>
  <%= @post.description %>

<h3>Comments</h3>
<% @post.comments.each do |c| %>
<%= c.comment_description %><br>
<% end %>

<div class="container">
	<h3>New Comment</h3>
<%= form_for([@post,Comment.new]) do |f| %>
  <div class="field">
    <%= f.label :comment_description %><br>
    <%= f.text_area :comment_description, :class=>"form-control" %>
  </div>
    <%= f.submit "Add Comment", :class => "btn btn-primary" %>
</div>
<% end %>
<%= link_to 'Back', posts_path %> 