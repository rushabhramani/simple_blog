<h1>Listing posts</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post, :class=>"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts, :container=>false%>\<nav>
  <ul class="pagination">
    <li><a href="#">&laquo;</a></li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li><a href="#">&raquo;</a></li>
  </ul>
</nav>
<br>

<%= link_to 'New Post', new_post_path, :class=>"btn btn-default" %>
</div>